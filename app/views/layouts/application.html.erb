<!DOCTYPE html>
<html>
  <head>
    <title>MediaRanker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="alert__container">
      <% flash.each do |name, message| %>
        <div class="<%= name %>"><%= message %></div>
      <% end %>
    </section>

  <header class="app-header__header">
    <h1>
      <%=link_to "Media Ranker", root_path %>
      <small>Ranking the Best of Everything</small>
    </h1>

    <nav class="app-header__nav">
      <ul class="nav app-header__site-nav-container">
        <li class="nav-item app-header__nav_item">
          <%=link_to "View top Media", homepages_path, class:"nav-link" %>
        </li>
        <li class="nav-item app-header__nav_item">
          <%=link_to "View All Media", works_path, class:"nav-link" %>
        </li>
        <li class="nav-item app-header__nav_item">
          <%=link_to "Add a new work", new_work_path,class:"nav-link" %>
        </li>
        <li class="nav-item app-header__nav_item">
          <%=link_to "View All users", users_path, class:"nav-link" %>
        </li>
      </ul>
      <ul class="nav app-header__user-nav-container">
      <%if session[:user_id]%>
         <li class="nav-item app-header__nav_item">
        <%=link_to "logged in as #{User.find_by(id: session[:user_id]).name}", user_path(id: session[:user_id]), class: "btn btn-primary"%>
        </li>
        <li class="nav-item app-header__nav_item">
        <%=link_to "logout",logout_path,method: :post, class: "btn btn-primary"%>
        </li>
       
        <%else%>
       <li class="nav-item app-header__nav_item">
        <%=link_to "login",login_path, class: "btn btn-primary"%>
        </li>
        <%end%>
      </ul>
    </nav>
  </header>
    <%= yield %>
  </body>
</html>
