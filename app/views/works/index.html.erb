
<main>
    <h2>List of Works</h2>
  <section class="media-table">
    <h4>Albums</h4>
    <table class="table">
      <thead>
        <tr>
          <th width="80">Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width="100">Published</th>
          <th width="100">Upvote</th>
        </tr>
      </thead>
      <tbody>
        <% @albums.each do |album|%>
          <tr>
            <td><%=album.votes.length%></td>
            <td><%=link_to album.title, work_path(id: album.id)%></td>
            <td><%=album.creator%></td>
            <td><%=album.publication_year%></td>
            <td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/476/upvote">Upvote</a></td>
          </tr>
         <%end%>
      </tbody>
    </table>
  </section>
  <section class="media-table">
    <h4>Books</h4>
    <table class="table">
      <thead>
        <tr>
          <th width="80">Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width="100">Published</th>
          <th width="100">Upvote</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book|%>
          <tr>
            <td><%=book.votes.length%></td>
            <td><%=link_to book.title, work_path(id: book.id)%></td>
            <td><%=book.creator%></td>
            <td><%=book.publication_year%></td>
            <td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/476/upvote">Upvote</a></td>
          </tr>
         <%end%>
      </tbody>
    </table>
  </section>
  <section class="media-table">
    <h4>Movies</h4>
    <table class="table">
      <thead>
        <tr>
          <th width="80">Votes</th>
          <th>Title</th>
          <th>Created By</th>
          <th width="100">Published</th>
          <th width="100">Upvote</th>
        </tr>
      </thead>
      <tbody>
            <% @movies.each do  |movie|%>
          <tr>
            <td><%=movie.votes.length%></td>
            <td><%=link_to movie.title, work_path(id: movie.id)%></td>
            <td><%=movie.creator%></td>
            <td><%=movie.publication_year%></td>
            <td><a class="btn btn-primary" rel="nofollow" data-method="post" href="/works/476/upvote">Upvote</a></td>
            <%=link_to movie.title, work_path(id: movie.id)%>
          </tr>
         <%end%>
      </tbody>
    </table>
  </section>

<a class="btn btn-secondary" href="/">View top media</a>
<a class="btn btn-primary" href="/works/new">Add a new work</a>
  </main>
