<h3 id="green-head">List of Works</h3>
<section>
  <% @sorted.each do |group| %>
  <section class="media-table">
    <h4 class="type"><%= group.first.category %>s</h4>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Creator</th>
          <th>Published</th>
          <% if @user %>
            <th>Upvote</th>
          <% else %>
            <th>Votes</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
          <% group.each do |item| %>
          <tr>
          <td><%= link_to item.title, work_path(item.id) %></td>
          <td><%= item.creator %></td>
          <td><%= item.publication_year %></td>
          <% if @user %>
            <td><a class="button" rel="nofollow" data-method="post" href="/works/<%="#{item.id}"%>/upvotes">Upvote</a></td>
          <% else %>
            <td><%= item.get_count %></td>
          <% end %>
        </tr>
        <%end %>
      </tbody>
    </table>
  </section>
  <% end %>
</section>
<section>
  <%= link_to "View top media", root_path, class: "button" %>
  <%= link_to "Add a new work", new_work_path, class: "button" %>
</section>
