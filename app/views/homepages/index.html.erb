<body>
  <main>
      <section class="spotlight">
    <h2 class="spotlight__header">
      <span class="spotlight__header--prefix">Media Spotlight</span>                       
      <%=link_to @spotlight.title, work_path(@spotlight.id), class:"spotlight__link-to"%>
    </h2>
    <p class="spotlight__description">
      <%= @spotlight.votes.count%> votes- <%= @spotlight.description%>
    </p>
  </section>

<hr class="root__hr">
<section class="top-ten__container">
  <section class="top-ten__list-container">
  <h2 class="top-ten__header">
    Top Movies
  </h2>
  <ul class="list-group top-ten__list">
  <%@movies.each do |movie|%>
      <li class="list-group-item">
        <h4>
           <%= link_to movie.title,work_path(movie.id) %>
        </h4>
        <p> <%=movie.votes.count%> votes-</p>
      </li>
      <%end%>
  </ul>
  <!-- <a href="/works.movies">View More Movies</a> -->
</section>
<section class="top-ten__container">
  <section class="top-ten__list-container">
  <h2 class="top-ten__header">
    Top Books
  </h2>
  <ul class="list-group top-ten__list">
  <%@books.each do |book|%>
      <li class="list-group-item">
        <h4>
           <%= link_to book.title,work_path(book.id) %>
        </h4>
        <p> <%=book.votes.count%> votes-</p>
      </li>
      <%end%>
  </ul>
  <!-- <a href="/works.movies">View More Movies</a> -->
</section>
<section class="top-ten__container">
  <section class="top-ten__list-container">
  <h2 class="top-ten__header">
    Top Albums
  </h2>
  <ul class="list-group top-ten__list">
  <%@albums.each do |album|%>
      <li class="list-group-item">
        <h4>
           <%= link_to album.title,work_path(album.id) %>
        </h4>
        <p> <%=album.votes.count%> votes-</p>
      </li>
      <%end%>
  </ul>
  <!-- <a href="/works.movies">View More Movies</a> -->
</section>

  
</section>
  </main>
</body>