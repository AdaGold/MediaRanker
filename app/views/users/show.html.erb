<main>

  <h2>User Summary: <%=@user.name%></h2>
  <p>Joined site: <%= @user.created_at%></p>

<section class="user-votes__container">
  <h3 class="user-votes__header">Votes</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
    </thead>
    <tbody>
     <% @user.votes.each do |vote|%>
        <tr>
          <td><%= link_to vote.work.title, work_path(vote.work)%></td>
          <td><%=vote.work.created_at%></td>
          <td>
          </td>
        </tr>
         <%end%>
    </tbody>
  </table>
</section>

<a class="btn btn-secondary" href="/users">See all Users</a>
<a class="btn btn-primary" href="/">Back to Media List</a>
  </main>