<section>
  <h3 id="green-head">User Summary: <%= @user.username %></h3>
  <p>Joined site <%= @user.join_date.to_formatted_s(:long)  %></p>
</section>
<section>
  <table>
    <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
    </thead>
    <tbody>
        <% @user.upvotes.each do |item| %>
        <tr>
        <td><%= link_to item.work.title, work_path(item.work.id) %></td>
        <td><%= item.work.creator %></td>
        <td><%= item.work.publication_year %></td>
        <td><%= item.work.category %></td>
        <td><%= item.vote_date.to_formatted_s(:long) %></td>
      </tr>
      <%end %>
    </tbody>
  </table>
</section>
<section>
  <%= link_to "See all Users", users_path, class: "button" %>
  <%= link_to "Back to Media List", works_path, class: "button" %>
</section>
