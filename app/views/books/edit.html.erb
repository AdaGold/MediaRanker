<%= image_tag "owl_media_ranker.jpg" %>
<h1><%= 'Edit ' + @mybook[:name] %></h1>

<%= form_for @mybook, url: books_update_path, method: :put do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit %>

<% end %>