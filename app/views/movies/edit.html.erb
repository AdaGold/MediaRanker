<%= image_tag "owl_media_ranker.jpg" %>
<h1><%= 'Edit ' + @mymovie.name %></h1>

<%= form_for @mymovie, url: movies_update_path, method: :put do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :director %>
  <%= f.text_field :director %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit %>

<% end %>