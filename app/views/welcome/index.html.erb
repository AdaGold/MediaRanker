     <!--  <td><%# book.ranking %> -->
      <!-- <td><%# link_to 'View book!', book_show_path(book[:id]) %></td> -->
    </tr>
  <% end %>
</table>
 <%= link_to 'View more Books', books_index_path(@books) %>

<table>
<tr>
  <th>Top Albums</th>
</tr>
<% @albums[0..9].each do |album| %>
